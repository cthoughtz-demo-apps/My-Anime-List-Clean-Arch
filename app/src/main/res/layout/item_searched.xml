<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginVertical="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "8.03"
        android:textColor="@color/white"
        android:drawableTint="@color/white"
        android:textSize="20dp"
        android:layout_marginEnd="5dp"
        android:background="@color/overlay_black"
        android:drawableEnd="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        app:layout_constraintEnd_toEndOf="@id/profile"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="2dp"
        tools:text="Full Metal Panic? Fumoffu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:id="@+id/type"
        android:padding="3dp"
        android:paddingHorizontal="2dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="TV"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/title"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/epOrVol"
        tools:text="12 ep,"
        app:layout_constraintTop_toTopOf="@id/type"
        app:layout_constraintBottom_toBottomOf="@id/type"
        app:layout_constraintStart_toEndOf="@id/type"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/additionalinfo"
        tools:text="Summer 2003"
        app:layout_constraintTop_toTopOf="@id/epOrVol"
        app:layout_constraintBottom_toBottomOf="@id/epOrVol"
        app:layout_constraintStart_toEndOf="@id/epOrVol"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="292497"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:drawableEnd="@drawable/ic_outline_people"
        android:drawableTint="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>