<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/seasonalImage"
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/overlay_black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/seasonalImage"
        app:layout_constraintEnd_toEndOf="@+id/seasonalImage"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="@+id/seasonalImage"
        app:layout_constraintTop_toTopOf="@+id/seasonalImage"
        app:layout_constraintVertical_bias="0.99">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:drawableEnd="@drawable/ic_star"
            android:text="8.77"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/scoreBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:drawableEnd="@drawable/ic_outline_people"
            android:drawablePadding="2dp"
            android:text="212,135"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toEndOf="@+id/seasonalImage"
        app:layout_constraintStart_toStartOf="@+id/seasonalImage"
        app:layout_constraintTop_toBottomOf="@+id/seasonalImage"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        tool:text="Jujutsu Kaisen 2nd Season Action" />

    <TextView
        android:id="@+id/category"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/seasonalImage"
        app:layout_constraintStart_toStartOf="@+id/seasonalImage"
        app:layout_constraintTop_toBottomOf="@id/title"
        tool:text="Action, Advencture, Fantasy" />
</androidx.constraintlayout.widget.ConstraintLayout>